 import pygame, sys, time
 from pygame.locals import *

 # Setup PyGame
 pygame.init()

 # Setup the Window
 WINDOWWIDTH = 400
 WINDOWHEIGHT = 400
 windowSurface = pygame.display.set_mode((WINDOWWIDTH, WINDOWHIEGHT), 0, 32)
 pygame.display.set_caption('Animation Example!')

 # Setup the direction variables.
DOWNLEFT = 'downleft'
DOWNRIGHT = 'downright'
UPLEFT = 'upleft'
UPRIGHT = 'upright'

MOVESPEED = 4